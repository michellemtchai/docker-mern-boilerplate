    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <noscript>
            You need to enable JavaScript to run this app.
        </noscript>
        <div id="root"></div>
        <%if (process.env.APP_ENV == 'development') { %>
            <p>
                You're in development mode. Please visit
