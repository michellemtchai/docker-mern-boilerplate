{
    "name": "docker-node-boilerplate",
    "version": "1.0.0",
    "description": "A Node.js app on Docker",
    "author": "Michelle Chai",
    "repository": {
        "type": "git",
        "url": "git://github.com/michellemtchai/docker-node-boilerplate.git"
    },
    "license": "MIT",
    "main": "server.js",
    "scripts": {
        "all": "./run.sh",
        "prod": "node server.js",
        "build": "bash ./heroku-build.sh",
        "start": "nodemon server.js ",
        "doc": "apidoc -i . -o ./docs/ -f \".*\\.js$\" -f \".*\\.ts$\" -e ./node_modules -e ./docs"
    },
    "dependencies": {
        "apidoc": "^0.26.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.5",
        "express": "^4.17.1",
        "mongoose": "5.11.15",
        "node-fetch": "^2.6.1",
        "query-string": "^6.13.8",
        "compression": "^1.7.4",
        "serve-favicon": "^2.5.0",
        "winston": "^3.3.3"
    },
    "nodemonConfig": {
        "ignore": [
            "public/*",
            "frontend/*",
            "docker/*"
        ],
        "legacyWatch": true
    }
}
